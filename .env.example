# Privacy Mode Configuration
PRIVACY_MODE=false  # Set to true to use local Gemma 3n for sensitive operations

# CLI Configuration
CLI_MODE=true
DEFAULT_INTERACTION_DEPTH=3
MAX_CLARIFICATION_ROUNDS=5
PROGRESS_DISPLAY_INTERVAL=10
LOG_LEVEL=INFO  # Set to ERROR to disable debug logs

# Perplexity API Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_BASE_URL=https://api.perplexity.ai

# Anthropic API Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Ollama Local Configuration (for privacy mode)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=gemma3n:4b

# Cost Tracking Configuration
ENABLE_COST_TRACKING=true
COST_TRACKING_LOG_FILE=./logs/cost_tracking.json
BUDGET_ALERT_THRESHOLD=50.00

# Research Configuration
MAX_RESEARCH_DEPTH=5
DEFAULT_CITATION_STYLE=APA
ACADEMIC_QUALITY_THRESHOLD=0.85